from NeuroPy import NeuroPy
import time

object1=NeuroPy("/dev/tty.MindWaveMobile-DevA",57600)

def start():
	object1.start()

def get_brain_energy():

	delta = object1.delta
	theta = object1.theta
	lowbeta = object1.lowBeta
	highbeta = object1.highbeta

	energy = (delta+theta+lowbeta+highbeta)/2**24

	return energy

start()
get_brain_energy()

